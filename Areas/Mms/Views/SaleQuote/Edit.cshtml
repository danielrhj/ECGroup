    //    //this.grid0.OnAfterCreateEditor = mms.com.bindCalc1From2(self.pageData,self.grid0, "Cost", "PreInvoiceNoTax", "PreInvoiceTax", ['ReceiveCost','PreInvoiceNoTax',"PreInvoiceTax"]);
              

