<div class="z-toolbar">
    <a id="a_refresh" href="#" plain="true" class="easyui-linkbutton"  icon="icon-arrow_refresh"   title="刷新" data-bind="click:canShow('icon-arrow_refresh')?null:refreshClick,linkbuttonDisable:canShow('icon-arrow_refresh')">刷新</a>
    <a id="a_save" href="#" plain="true" class="easyui-linkbutton" icon="icon-save" data-bind="click:canShow('icon-save')?null:saveClick,linkbuttonDisable:canShow('icon-save')" title="保存">保存</a>
    <a id="a_creat" href="#" plain="true"  class="easyui-linkbutton"  icon="icon-feed_edit" data-bind="click:canShow('icon-feed_edit')?null:CreatSaleQuoteClick,linkbuttonDisable:canShow('icon-feed_edit')">生成报价单</a>
    <a id="a_creat1" href="#" plain="true"  class="easyui-linkbutton"  icon="icon-upload" data-bind="click:canShow('icon-upload')?null:SaleQuoteFileClick,linkbuttonDisable:canShow('icon-upload')">上传附件</a>

    <div class="datagrid-btn-separator"></div>
    <a id="a_first" href="#" plain="true" class="easyui-linkbutton" icon="icon-resultset_first" data-bind="click:firstEnable()?firstClick:null,linkbuttonEnable:firstEnable" title="第一条"></a> 
    <a id="a_previous" href="#" plain="true" class="easyui-linkbutton" icon="icon-resultset_previous" data-bind="click:previousEnable()?previousClick:null,linkbuttonEnable:previousEnable" title="上一条"></a> 
    <a id="a_next" href="#" plain="true" class="easyui-linkbutton" icon="icon-resultset_next" data-bind="click:nextEnable()?nextClick:null,linkbuttonEnable:nextEnable" title="下一条"></a> 
    <a id="a_last" href="#" plain="true" class="easyui-linkbutton" icon="icon-resultset_last" data-bind="click:lastEnable()?lastClick:null,linkbuttonEnable:lastEnable" title="最后一条"></a> 

</div>

<div id="master" class="container_12" >
    <div style="display:none;"><label data-bind="text:pageData.form.QuoteID" /></div>
    <table style="width:750px;margin-left:5px">
        <tr>
            <td>报价单号</td><td><input type="text" data-bind="value:pageData.form.QuoteNo,readOnly:true" title="系统自动生成" class="z-txt "  style="width:90px" /></td>
            <td>报价日期</td><td><input type="text" data-bind="dateboxValue:pageData.form.QuoteDate ,readOnly:true" class="z-txt easyui-datebox" /></td>      
            <td style="width:58px">客户代码</td><td style="width:130px"><input type="text" data-bind="value:pageData.form.CustCode ,readOnly:true" class="z-txt" style="width:60px" />
                <a id="a_find" href="#" plain="true" class="easyui-linkbutton" icon="icon-zoom" data-bind="click:searchCustomerClick" title="查询客户"></a> 
                          </td>
            <td>客户简称</td><td><input type="text" data-bind="value:pageData.form.CustAbbr ,readOnly:true" class="z-txt " /></td>      
        </tr>
        <tr>
            <td>联系人</td><td><input type="text" id="txtContact" data-bind="value:pageData.form.Contact ,readOnly:true" class="z-txt "  style="width:90px" /></td>            
            <td>Tel</td><td colspan="3" style="width:190px"><input type="text"  id="txtTel" data-bind="value:pageData.form.Tel ,readOnly:true" class="z-txt"  style="width:300px" /></td>
            
            <td>總金額</td><td><input type="text"  data-bind="numberboxValue:pageData.form.Amount,readOnly:true"   class="z-txt easyui-numberbox" data-options="precision:2"  style="width:60px" />
                    <input type="text" data-bind="datasource:dataSource.CNCYList,comboboxValue:pageData.form.Currency" class="z-txt easyui-combobox "  data-options="showblank:true" style="width:58px"/>
                        </td>
            
        </tr>

        <tr>
            <td>是否含税</td><td><input type="text" data-bind="datasource:dataSource.PriceTypeList,comboboxValue:pageData.form.PriceType" class="z-txt easyui-combobox "   style="width:97px" /></td>
            <td>是否确认</td><td><input type="text" data-bind="datasource:dataSource.CFMFlagList,comboboxValue:pageData.form.CFMFlag" class="z-txt easyui-combobox "  data-options="showblank:true" style="width:50px"/>
                    <input type="text" data-bind="datasource:dataSource.QuoteStatusList,comboboxValue:pageData.form.QuoteStatus,readOnly:true" class="z-txt easyui-combobox "  style="width:75px" />
                         </td>            
            <td style="width:58px">录入人</td><td ><input type="text" data-bind="value:pageData.form.InputBy,readOnly:true" class="z-txt" style="width:50px;"/>
                <input type="text" data-bind="value:pageData.form.InputDT,readOnly:true" class="z-txt" style="width:60px;color:blue;"/></td>
            <td>Remarks</td><td><input type="text" data-bind="value:pageData.form.Remarks" class="z-txt"  style="width:122px;" /></td>
            @*QuoteID,QuoteNo,QuoteDate,IncoTerms,CustCode,Contact,Tel,Currency,Remarks,QuoteStatus,PriceType,InputBy,InputDT,CFMFlag*@
        </tr>      
    </table>    
</div>

    <div title="tab1" style="height:650px;width:auto;overflow:hidden;">
        <div id="gridtb">
            <a href="#" class="easyui-linkbutton" plain="true" icon="icon-add" data-bind="click:canShow('icon-add')?null:addRowClick,linkbuttonDisable:canShow('icon-add')">新增</a>
            @*<a href="#" class="easyui-linkbutton" plain="true" icon="icon-edit" data-bind="click:canShow('icon-edit')?null:grid0.onClickRow,linkbuttonDisable:canShow('icon-edit')">编辑</a>*@
            <a href="#" class="easyui-linkbutton" plain="true" icon="icon-cross" data-bind="click:canShow('icon-cross')?null:removeRowClick,linkbuttonDisable:canShow('icon-cross')">删除</a>
        </div>  

       <table id="gridlist" data-bind="datagrid:grid" style="height:620px;width:auto">
            <thead>
                <tr> 
                    <th field="SNO" hidden="true" ></th>
                    <th field="QuoteID" hidden="true" editor="text" ></th>
                    <th field="CustPN"		sortable="true"	align="left" width="150" editor="{type:'validatebox',options:{required:true}}" >客户料号</th>
                    <th field="SuppPN"		sortable="true"	align="left" width="150" editor="{type:'validatebox',options:{required:true}}" >制造商料号</th>
                    <th field="CDesc"		sortable="true"	align="left" width="100" editor="{type:'validatebox',options:{required:true}}" >品名</th>
                    <th field="CSpec"		sortable="true"	align="left" width="200" editor="text" >规格</th>                
                    <th field="Brand"		sortable="true"	align="left"	width="100" editor="text" >Brand</th>   
                    <th field="Qty"		sortable="true"	align="right" formatter="com.formatMoney2" width="80"  editor="{type:'numberbox',options:{precision:2,min:1,required:true}}" >Qty</th>
                    <th field="ReplyPrice"		sortable="true"	align="right" formatter="com.formatMoney" editor="{type:'numberbox',options:{precision:4,min:0.01,required:true}}"	width="60" >单价</th> 
                    <th field="Unit"		sortable="true"	align="left" width="60"  editor="text"	editor="{type:'validatebox',options:{required:true}}" >Unit</th>
                    <th field="VATFlag"		sortable="true"	align="left" width="40"  editor="{type:'combobox',options:{data:data.dataSource.CFMFlagList,required:true}}" >VAT</th>
                    <th field="SPQ"		sortable="true"	align="right" formatter="com.formatMoney2" width="60"  editor="{type:'numberbox',options:{precision:0,min:1,required:true}}" >SPQ</th>
                    <th field="MOQ"		sortable="true"	align="right" formatter="com.formatMoney2" width="60"  editor="{type:'numberbox',options:{precision:0,min:1,required:true}}" >MOQ</th>
                    <th field="LeadTime"		sortable="true"	align="right" width="60"  editor="text" >LeadTime</th>
                    <th field="Remarks"		sortable="true"	align="right" width="60"  editor="text" >Remarks</th>
                    <th field="Amount"	 hidden="true" 	sortable="true"	align="right"	width="120" formatter="com.formatMoney2" >金額</th>
                </tr>
               @*QuoteID,CustPN,CSpec,CDesc,Brand,ReplyPrice,Qty,Unit,Amount,VATFlag,SPQ,MOQ,LeadTime,Remarks  *@
            </thead>
        </table>      

    </div>
